{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./.dev",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "diagnostics": true,
    "removeComments": true,
    "pretty": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./templates",
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  },
}