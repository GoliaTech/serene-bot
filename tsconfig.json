{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "development",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "diagnostics": true,
    "removeComments": true,
    "pretty": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "mapRoot": "map",
    "declaration": true,
    "declarationDir": "declaration",
  },
  "exclude": [
    "node_modules",
    "templates",
    "production"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  }
}