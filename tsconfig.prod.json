{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "outDir": "./prod/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": false,
    "pretty": true,
    "inlineSourceMap": false,
    "inlineSources": false,
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./node_modules/",
    "./templates/",
    "./prod/",
    "./dev/",
  ]
}
